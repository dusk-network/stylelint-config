  "bugs": "https://github.com/dusk-network/stylelint-config/issues/",
  "contributors": [
    "Kieran Hall <kieran@dusk.network>"
  ],
  "description": "Stylelint config used by Dusk",
  "engines": {
    "node": ">=16.0.0"
  },
  "homepage": "https://github.com/dusk-network/stylelint-config/",
  "keywords": [
    "dusk",
    "dusk network",
    "stylelint",
    "stylelintconfig"
  ],
  "license": "MPL-2.0",
  "name": "@dusk-network/stylelint-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dusk-network/stylelint-config.git"
  },
  "type": "module",
  "main": "index.js",
  "files": [
    "index.js",
    "lib/config/*.js"
  ],
  "scripts": {
    "check": "npm run format && npm run lint && npm run test",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test:jest",
    "test:jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage false"
  },
  "version": "1.0.5",
  "devDependencies": {
    "@dusk-network/eslint-config": "3.3.1",
    "@dusk-network/prettier-config": "1.1.0",
    "dedent": "1.5.3",
    "eslint": "8.57.0",
    "eslint-plugin-jest": "28.2.0",
    "jest": "29.7.0",
    "jest-preset-stylelint": "7.0.0",
    "prettier": "3.2.5",
    "stylelint": "16.3.1",
    "stylelint-config-standard": "36.0.0",
    "stylelint-no-unsupported-browser-features": "8.0.1",
    "stylelint-order": "6.0.4",
    "stylelint-selector-bem-pattern": "4.0.0"
  },
  "peerDependencies": {
    "stylelint": ">=16.3.1",
    "stylelint-config-standard": ">=36.0.0",
    "stylelint-no-unsupported-browser-features": ">=8.0.1",
    "stylelint-order": ">=6.0.4",
    "stylelint-selector-bem-pattern": ">=4.0.0"
  }
}
